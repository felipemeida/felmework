                <button class="btn btn-light" type="button"><i class="fa fa-envelope" aria-hidden="true"></i></button>
            </div>
        </div>

        <div class="d-grid gap-2">
            <input type="hidden" name="slug-company" value="{{ dataCompany.slug }}">
            <button type="submit" class="btn btn-success btn-block">RESETAR</button>
        </div>

    </form>

    <div class="strike">
        <span>ou</span>
    </div>
    <div class="text-center"><a href="javascript:void(0);" class="text-success" onclick="show('login_form');"><b>FAZER LOGIN</b></a></div>
    <div class="clearfix"></div>
</div>

